<resources>
    <!-- Base application theme. -->
    <style name="Theme.Paypay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="RegularText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="MediumText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
    </style>

    <style name="BoldText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="fontFamily">@font/bold</item>
    </style>

</resources>